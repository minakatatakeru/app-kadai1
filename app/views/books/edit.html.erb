  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<h1>Editing Book</h1>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
 <div><label for="book_title">Title</label>
  <%= f.text_field :title %>
 </div>

 <div><label for="book_body">Body</label>
  <%= f.text_area :body %>
 </div>

 <div><%= f.submit 'Update Book' %></div>

<%= link_to "Show", book_path(@book.id) %>
|
<%= link_to "Back", books_path %>

<% end %>